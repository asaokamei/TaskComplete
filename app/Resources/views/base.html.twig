<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <!-- Material Design fonts -->
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">
        
        <!-- Bootstrap -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/js/bootstrap.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/js/material.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/js/ripples.js"></script>

        <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/css/bootstrap.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/css/material.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/css/ripples.css" rel="stylesheet">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <script>
            $(function(){
                $.material.init();
            });
        </script>

        <style>
            body { padding-top: 70px; }
            h1 { line-height: 1.2; margin: 0 0 .5em; }
            h1 { font-size: 36px; font-weight: 400; }
            #welcome, #status { margin-bottom: 2em; }
            #welcome h1 span { display: block; font-size: 60%; font-weight:200; }
            div.task-project {
                padding: 0 .5rem .5rem .5rem;
                border-left: 1px solid #cccccc;
                margin-bottom: 1rem;
            }
            div.task-project h2 {
                background-color: #cccccc;
                padding: .2rem;
                margin: 0 0 .5rem -.5rem;
            }
            div.task-group {
                background-color: white;
                border: 1px solid #e0e0e0;
                border-radius: .5rem;
                padding: .8rem .5rem .5rem .5rem;
                margin-top: .5rem;
            }
            div.task-group h3 {
                font-size:1.5rem;
                font-weight:bold;
                margin: .2rem .2rem .5rem .2rem;
                background-color: #f0f4f4;
                padding: .4em;
                border-radius: .2em;
            }
            .required:after {
                content:"*";
                color:red;
            }
            div.flash {
                border: 2px solid #dadada;
                background-color: #f4f4f4;
                border-radius: .5rem;
                padding:1rem;
                font-weight:400;
                margin-bottom:2rem;
            }
            div.flash-notice {
                border: 2px solid #dda6a5;
                background-color: #f9c7c7;
            }
            div.flash-message {
                border: 2px solid #b2ddbb;
                background-color: #ebf9e7;
            }
            hr.line {
                color: #333333;
                width: 80%;
                height: 3px;
                border-bottom:1px solid #9bcd9f;
            }
        </style>

    </head>
    <body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Task Manager</a>
        </div>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav">
                <li><a href="/projects">by projects</a></li>
                <li><a href="/date">by date</a></li>
            </ul>
            <!-- 
            <form class="navbar-form navbar-right">
                <input type="text" class="form-control col-lg-8" placeholder="Search">
                <input type="submit" class="btn btn-sm btn-info" value="?">
            </form>
            -->
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="/initialize" data-target="#" class="dropdown-toggle" data-toggle="dropdown">project list <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        {{ render(controller('AppBundle:Project:listActiveProjects')) }}
                        <li role="presentation" class="divider"></li>
                        <li><a href="/projects/create">create a new project</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="/initialize" data-target="#" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-cog" style="margin-right: 1.5em;"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li ><a href="/initialize">initialize database</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="container">

        {% for flash_message in app.session.flashBag.get('notice') %}
            <div class="flash flash-notice">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.session.flashBag.get('message') %}
            <div class="flash flash-message">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% if (error is defined) %}
            <div class="flash flash-notice">
                {{ error }}
            </div>
        {% elseif (notice is defined) %}
            <div class="flash flash-message">
                {{ notice }}
            </div>
        {% endif %}
        
        {% block body %}{% endblock %}
    </div>
    {% block javascripts %}{% endblock %}
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    </body>
</html>
