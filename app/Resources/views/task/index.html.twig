{% extends 'base.html.twig' %}

{% block title %}
    Symfony To-Do
{% endblock %}

{% block body %}

    <div id="welcome">
        <h1><span>task manager </span>projects at a glance</h1>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th rowspan="2">project <br>name</th>
                <th rowspan="2">done <br>by</th>
                <th colspan="4">completed tasks</th>
                <th rowspan="2">remaining tasks</th>
                <th rowspan="2">completion&nbsp;(%)</th>
            </tr>
            <tr>
                <th>today</th>
                <th>yesterday</th>
                <th>last week</th>
                <th>all</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
            <tr>
                <th>{{ project.name }} <a href="/projects/{{ project.getId() }}"><span class="small glyphicon glyphicon-pencil"></span></a></th>
                <td>{{ project.doneBy }}</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <h3>wishes to be </h3>
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
