{% extends 'base.html.twig' %}

{% block title %}
    Symfony To-Do
{% endblock %}

{% block body %}

    <div id="welcome">
        <h1><span>project </span>create a new project</h1>
    </div>

    <div class="col-sm-6">

        {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {"attr": {"class":"form-control", "placeholder":"project name..."}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="form-group">
                {{ form_label(form.done_by) }}
                {{ form_widget(form.done_by, {"attr": {"class":"form-control", "placeholder":"project name..."}}) }}
                {{ form_errors(form.done_by) }}
            </div>

            <div class="form-group">
                {{ form_label(form.group_name) }}
                {{ form_widget(form.group_name, {"attr": {"class":"form-control", "placeholder":"initial group name..."}}) }}
                {{ form_errors(form.group_name) }}
            </div>

            <input type="submit" value="create" class="btn btn-primary">
            <a href="/" class="btn btn-default">return to top</a>
        
        {{ form_end(form) }}

    </div>

{% endblock %}

{% block stylesheets %}
{% endblock %}
