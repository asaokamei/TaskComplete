{% extends 'base.html.twig' %}

{% block title %}
    Symfony To-Do
{% endblock %}

{% block body %}

    <div id="welcome">
        <h1><span>project </span>create a new project</h1>
    </div>

    <div class="col-sm-6">

        {{ form_start(form) }}

            <div class="form-group">
                <label for="title" class="required">project name</label>
            {{ form_errors(form.name) }}
                <input type="text" class="form-control" name="project[name]" required="required" id="title" placeholder="name for the new project">
            </div>

            <div class="form-group">
                <label for="done_by" class="">done by</label>
                {{ form_errors(form.done_by) }}
                <input type="datetime-local" class="form-control" name="group[done_by]" id="done_by">
            </div>

            <div class="form-group">
                <label for="title" class="required">first task-group name</label>
                <input type="text" class="form-control" name="group[name]" id="name" placeholder="input initial group name" value="tasks">
            </div>

            <input type="submit" value="create" class="btn btn-primary">
            <a href="/" class="btn btn-default">return to top</a>

        {{ form_end(form) }}

    </div>

{% endblock %}

{% block stylesheets %}
{% endblock %}
