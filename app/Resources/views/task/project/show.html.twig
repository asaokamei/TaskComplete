{% endblock %}

{% block body %}

    <div id="welcome">
        <h1><span>project in details</span>project title here (#{{ project_id }})</h1>
    </div>
    
    <div class="clearfix"></div>
    
    <div class="col-md-3">
        <h3>add new group</h3>
        <form class="form-group">
            <label><input type="text" placeholder="group name" ></label>
