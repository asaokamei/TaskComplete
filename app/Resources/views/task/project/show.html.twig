{% extends 'base.html.twig' %}

{% block title %}
    Symfony To-Do
{% endblock %}

{% block body %}

    <style type="text/css">
        tr.task-done {
            color: #666;
            text-decoration: line-through;
        }
        tr.task-active {
            
        }
    </style>

    <div id="welcome">
        <h1><span>project detail</span>
            {{ project.name }}
            <span>{% if(project.doneBy) %}(done by: {{ project.doneBy.format() }}){% endif %}</span></h1>
    </div>

    <div class="clearfix"></div>

    <div class="col-sm-8">
        <h2>task-groups</h2>

        {% for group in project.groups %}

            <div class="task-group">
                <h3>{{ group.name }}</h3>
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                        <tr>
                            <th>done</th>
                            <th>date</th>
                            <th>task name</th>
                            <th>details...</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for task in group.tasks %}
                            <tr class="task-{{ task.getStatus() }}">
                                <td>                               
                                    {% if (task.isActive()) %}
                                        <a href="" class="btn btn-xs btn-warning"><span class="glyphicon glyphicon-unchecked"></span></a>
                                    {% else %}
                                        <a href="" class="btn btn-xs btn-success"><span class="glyphicon glyphicon-check"></span></a>
                                    {% endif %}
                                </td>
                                <td>{{ task.getDate() }}</td>
                                <td>{{ task.title }}</td>
                                <td>{{ task.details }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a class="btn btn-primary btn-sm" href="{{ path('task-create', {'project_id': project.getId(), 'group_id': group.getId()}) }}">add a task</a>
                </div>
            </div>

        {% endfor %}
        
    </div>

    <div class="col-sm-4 pull-left">
        
        <h2>Groups</h2>
        
        <div class="task-group">
            <h3>add a new group</h3>
            {{ form_start(newGroup) }}
            {{ form_widget(newGroup.name, {"attr":{"class":"form-control", "placeholder":"new group name"}}) }}
            {{ form_errors(newGroup.name) }}
            <input type="submit" value="add" class="btn btn-xs btn-primary">
            {{ form_end(newGroup) }}
        </div>
        
        <h2>Managing Project</h2>
        <div class="task-group">
            <h3>change project info</h3>
            {{ form_start(updater) }}
                {{ form_widget(updater.name, {"attr":{"class":"form-control", "placeholder":"REQUIRED: new project name"}}) }}
                {{ form_widget(updater.done_by, {"attr":{"class":"form-control", "placeholder":"done by"}}) }}
                <input type="submit" value="change" class="btn btn-xs btn-primary">
            {{ form_end(updater) }}
        </div>

        <div class="task-group">
            <h3>close this project</h3>
            <form class="form-group">
                <label><input type="checkbox" name="action" id="action" value="close"> ‚Üê check here and </label>
                <input type="submit" value="close" class="btn btn-xs btn-warning">
            </form>
        </div>
    </div>


{% endblock %}

