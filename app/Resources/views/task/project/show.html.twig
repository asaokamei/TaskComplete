                    <tr>
                        <th>done</th>
                        <th>date</th>
                        <th>task name</th>
                        <th>details...</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td><label><input type="checkbox"> </label></td>
                        <td>01/31</td>
                        <td>CPE</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><label><input type="checkbox"> </label></td>
                        <td>03/31</td>
                        <td>保険アプリ</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><label><input type="checkbox"> </label></td>
                        <td>02/28</td>
                        <td>JFAEL</td>
                        <td></td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <ul class="list-group">
                <li class="list-group-item"><a href="/tasks/create">タスク追加</a>
                    <div id="add-task-1" style="display: none;">
                        <form class="form-group">
                            <label><input type="text" placeholder="task name" ></label>
                            <label><input type="date" value=""></label>
                            <input type="submit" value="add" class="btn btn-xs btn-primary">
                        </form>
                    </div>
                </li>
            </ul>
        </div>
    
    </div>

{% endblock %}

