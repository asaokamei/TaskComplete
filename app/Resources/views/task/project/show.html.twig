{% extends 'base.html.twig' %}

{% block title %}
    Symfony To-Do
{% endblock %}

{% block body %}

    <!--suppress CssUnusedSymbol -->
    <style type="text/css">
        tr.task-done {
            color: #666;
            text-decoration: line-through;
            display: none;
        }
    </style>

    <script type="text/javascript">
        function toggleDone() {
            $('tr.task-done').toggle();
            return false;
        }
    </script>
    
    {{ taskJS|raw }}
    
    <div id="welcome">
        <h1><span>project detail</span>
            {{ project.name }}
            <span>{% if(project.doneBy) %}(done by: {{ project.doneBy.format() }}){% endif %}</span></h1>
    </div>

    <div class="clearfix"></div>

    <div class="col-sm-8">

        {% for group in project.groups %}

            <div class="task-group">
                <h3>{{ group.name }}
                <span class="doneBy">{{ group.getDoneBy() }}</span></h3>
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                        <tr>
                            <th>done</th>
                            <th>date</th>
                            <th>task name</th>
                            <th>details...</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for task in group.tasks %}
                            <tr class="task-{{ task.getStatus() }}">
                                <td>
                                    {% include 'task/includes/task-toggle.html.twig' %}
                                </td>
                                <td>{{ task.getDate() }}</td>
                                <td><a href="{{ path('task-edit', {'id':task.getId()}) }}">{{ task.title }}</a></td>
                                <td>{{ task.details }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a class="btn btn-primary btn-sm" href="{{ path('task-create', {'project_id': project.getId(), 'group_id': group.getId()}) }}">add a task</a>
                </div>
            </div>

        {% endfor %}
        
    </div>

    <div class="col-sm-4 pull-left">
        
        <h2>Show Done Tasks</h2>

        <a href="javascript:toggleDone();" class="btn btn-success btn-sm" >toggle tasks</a>
        
        <h2>Groups</h2>
        
        <div class="task-group">
            <h3>add a new group</h3>
            {{ form_start(newGroup, {
                'action': path('group-create', {'project_id': project.getId()}), 
                'method': 'POST'
                }) }}
            {{ form_label(newGroup.name) }}
            {{ form_widget(newGroup.name, {"attr":{"class":"form-control", "placeholder":"new group name"}}) }}
            {{ form_errors(newGroup.name) }}
            {{ form_label(newGroup.doneBy) }}
            {{ form_widget(newGroup.doneBy, {"attr":{"class":"form-control", "placeholder":"done by"}}) }}
            {{ form_errors(newGroup.doneBy) }}
            <input type="submit" value="add" class="btn btn-xs btn-primary">
            {{ form_end(newGroup) }}
        </div>
        
        <h2>Managing Project</h2>
        <div class="task-group">
            <h3>change project info</h3>
            {{ form_start(updater) }}
                {{ form_label(updater.name) }}
                {{ form_widget(updater.name, {"attr":{"class":"form-control", "placeholder":"REQUIRED: new project name"}}) }}
                {{ form_label(updater.doneBy) }}
                {{ form_widget(updater.doneBy, {"attr":{"class":"form-control", "placeholder":"done by"}}) }}
                <input type="submit" value="change" class="btn btn-xs btn-primary">
            {{ form_end(updater) }}
        </div>

        <div class="task-group">
            <h3>close this project</h3>
            <form method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('token_id') }}">
                <input type="hidden" name="_method" value="DELETE">
                To delete, <label>check â†’<input type="checkbox" name="action" value="delete"></label> and click: <br>
                <input type="submit" value="delete!" class="btn btn-sm btn-danger">
            </form>
        </div>
    </div>


{% endblock %}

{% block stylesheets %}
{% endblock %}
