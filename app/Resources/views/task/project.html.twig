{% extends 'base.html.twig' %}

{% block title %}
    Symfony To-Do
{% endblock %}

{% block body %}

    <style type="text/css">
        li.task-done {
            color: #666;
            text-decoration: line-through;
        }
        li.task-active {

        }
    </style>

    {{ taskJS|raw }}

    <div id="welcome">
        <h1><span>task list </span>by projects</h1>
    </div>

    <script type="text/javascript">
        function toggleGroup(id) {
            $('div#' + id).toggle();
            return false;
        }
    </script>

    {% for project in projects %}

        <div class="col-md-3 col-sm-6 task-project">
            <h2>{{ project.name }} <a href="{{ path('project-detail', {'id':project.getId()}) }}">{% include 'task/includes/project-details.html.twig' %}</a></h2>
            {% for group in project.groups %}
                <div class="task-group">
                    <h3>{{ group.name }}</h3>
                    <ul class="list-group">
                        {% for task in group.tasks %}
                            <li class="list-group-item task-{{ task.getStatus() }}" style="">
                                {% include 'task/includes/task-toggle.html.twig' %}
                                {{ task.getDate() }} <a href="{{ path('task-edit', {'id':task.getId()}) }}">{{ task.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endfor %}
        </div>

    {% endfor %}

{% endblock %}

{% block stylesheets %}
{% endblock %}
