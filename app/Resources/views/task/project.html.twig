{% extends 'base.html.twig' %}

{% block title %}
    Symfony To-Do
{% endblock %}

{% block body %}

    <style type="text/css">
        li.task-done {
            color: #666;
            text-decoration: line-through;
        }
        li.task-active {

        }
    </style>
    
    <div id="welcome">
        <h1><span>task list </span>by projects</h1>
    </div>

    <script type="text/javascript">
        function toggleGroup(id) {
            $('div#' + id).toggle();
            return false;
        }
    </script>

    {% for project in projects %}

        <div class="col-md-3 col-sm-4 task-project">
            <h2>{{ project.name }} <a href="/projects/{{ project.getId() }}"><span
                            class="small glyphicon glyphicon-pencil"></span></a></h2>
            {% for group in project.groups %}
                <div class="task-group">
                    <h3>{{ group.name }}</h3>
                    <ul class="list-group">
                        {% for task in group.tasks %}
                            <li class="list-group-item task-{{ task.getStatus() }}" style="">
                                {% if (task.isActive()) %}
                                    <a href="" class="btn btn-xs btn-warning"><span class="glyphicon glyphicon-unchecked"></span></a>
                                {% else %}
                                    <a href="" class="btn btn-xs btn-success"><span class="glyphicon glyphicon-check"></span></a>
                                {% endif %}
                                {{ task.getDate() }} {{ task.title }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endfor %}
        </div>

    {% endfor %}

{% endblock %}

{% block stylesheets %}
{% endblock %}
