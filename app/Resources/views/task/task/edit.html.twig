{% extends 'base.html.twig' %}

{% block title %}
    Symfony To-Do
{% endblock %}

{% block body %}

    {{ taskJS | raw }}
    {% set group = task.group %}
    {% set project = group.project %}

    <div id="welcome">
        <h1>
            <span><a href="{{ path('project-detail', {'id': project.getId()}) }}">{{ project.name }}</a> / {{ group.name }} </span>edit
            a task</h1>
    </div>

    <!--
      -- left column, main contents.
      -->
    <div class="col-sm-8">

        <h2>Edit Task Information</h2>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="form-group">
            <label>status</label>
            <div class="clearfix"></div>
            {{ task.status.label() }}
        </div>

        <div class="form-group">
            <label for="title" class="required">task title</label>
            {{ form_widget(form.title, {"attr": {"class":"form-control", "placeholder":"task name"}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="form-group">
            <label for="doneBy" class="">done by</label>
            {{ form_widget(form.doneBy, {"attr": {"class":"form-control", "placeholder":"done by"}}) }}
            {{ form_errors(form.doneBy) }}
        </div>

        <div class="form-group">
            <label for="details" class="">details</label>
            {{ form_widget(form.details, {"attr": {"class":"form-control", "style":"height:5em;", "placeholder":"details of the task here..."}}) }}
            {{ form_errors(form.details) }}
        </div>

        <div class="form-group">
            <label>done at</label>
            <div class="clearfix"></div>
            {% if task.doneAt %}
                {{ task.doneAt.format('Y/m/d H:i:s') }}
            {% else %}
                -- not set --
            {% endif %}
        </div>

        <input type="submit" value="update" class="btn btn-primary">
        <a href="/" class="btn btn-default">return to top</a>

        {{ form_end(form) }}

    </div>

    <!--
      -- right column
      -->
    <div class="col-sm-4">
        <h2>Manage Task</h2>

        {% if task.isActive() %}
            <h3>done</h3>
            to set this task, 'done':<br>
        {% else %}
            <h3>activate</h3>
            to activate this task:<br>
        {% endif %}
        {% include 'task/includes/task-toggle.html.twig' %}

        <h3>delete</h3>

        <form method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('token_id') }}">
            <input type="hidden" name="_method" value="DELETE">
            To delete, <label>check â†’<input type="checkbox" name="action" value="delete"></label> and click: <br>
            <input type="submit" value="delete!" class="btn btn-sm btn-danger">
        </form>
    </div>
    {{ form_start(form) }}

{% endblock %}

{% block stylesheets %}
{% endblock %}
