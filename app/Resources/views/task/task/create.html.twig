{% extends 'base.html.twig' %}

{% block title %}
    Symfony To-Do
{% endblock %}

{% block body %}

    <div id="welcome">
        <h1><span><a href="{{ path('project-detail', {'id': project.getId()}) }}">{{ project.name }}</a> / {{ group.name }} </span>create a new task</h1>
    </div>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="form-group">
            <label for="title" class="required">task title</label>
            {{ form_widget(form.title, {"attr": {"class":"form-control", "placeholder":"task name"}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="form-group">
            <label for="doneBy" class="">done by</label>
            {{ form_widget(form.doneBy, {"attr": {"class":"form-control", "placeholder":"done by"}}) }}
            {{ form_errors(form.doneBy) }}
        </div>

        <div class="form-group">
            <label for="details" class="">details</label>
            {{ form_widget(form.details, {"attr": {"class":"form-control", "style":"height:5em;", "placeholder":"details of the task here..."}}) }}
            {{ form_errors(form.details) }}
        </div>

        <input type="submit" value="create" class="btn btn-primary">
        <a href="/" class="btn btn-default">return to top</a>

    {{ form_end(form) }}

{% endblock %}

{% block stylesheets %}
{% endblock %}
